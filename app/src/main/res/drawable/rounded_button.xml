<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Set rounded corners -->
    <corners android:radius="25dp"/>

    <!-- Set button color -->
    <solid android:color="@color/button_color"/>

    <!-- Add padding -->
    <padding
        android:left="16dp"
        android:right="16dp"
        android:top="8dp"
        android:bottom="8dp"/>
</shape>
